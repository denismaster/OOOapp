@page
@model OOOVote.Pages.IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Голосования";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-content-center mb-3">
    <h3>@ViewData["Title"]</h3>
    <a class="btn btn-primary" asp-page="Create">Новое голосование</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Voting[0].Subject)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Voting[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Voting[0].StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Voting[0].EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Voting[0].Organization)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Voting) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Subject)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Organization.Id)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
