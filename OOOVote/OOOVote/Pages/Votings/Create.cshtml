@page
@model OOOVote.Pages.CreateModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Новое голосование";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>@ViewData["Title"]</h3>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Voting.Subject" class="control-label">Тема голосования</label>
                <input asp-for="Voting.Subject" class="form-control" />
                <span asp-validation-for="Voting.Subject" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Voting.Description" class="control-label">Описание</label>
                <textarea asp-for="Voting.Description" class="form-control"></textarea>
                <span asp-validation-for="Voting.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Voting.StartDate" class="control-label">Дата начала</label>
                <input asp-for="Voting.StartDate" class="form-control" />
                <span asp-validation-for="Voting.StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Voting.EndDate" class="control-label">Дата окончания</label>
                <input asp-for="Voting.EndDate" class="form-control" />
                <span asp-validation-for="Voting.EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Voting.OrganizationId" class="control-label">Организация</label>
                <select asp-for="Voting.OrganizationId" class="form-control" asp-items="ViewBag.OrganizationId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-primary" />
                <a class="btn btn-light" asp-page="Index">Назад</a>
            </div>
        </form>
    </div>
    <div class="col-md-6">
        <h5>Повестка дня</h5>
        @for (int i=0; i < Model.Options.Count; i++)
        {
            <div class="form-group">
                <input asp-for="Options[i]" class="form-control" />
            </div>
        }
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
