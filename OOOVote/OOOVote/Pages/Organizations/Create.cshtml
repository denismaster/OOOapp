@page
@model OOOVote.Pages.Organizations.CreateModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using OOOVote.Data.Entities

@{
    ViewData["Title"] = "Новая организация";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card">
    <div class="card-body">
        <h5 class="card-title">
            @ViewData["Title"]
        </h5>
        <div class="row">
            <div class="col-md-4">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Organization.Name" class="control-label">
                            Название
                        </label>
                        <input asp-for="Organization.Name" class="form-control" />
                        <span asp-validation-for="Organization.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Organization.ShareСapital" class="control-label">
                            Уставной капитал
                        </label>
                        <div class="input-group">
                            <input type="number" asp-for="Organization.ShareСapital" class="form-control" />
                            <div class="input-group-append">
                                <span class="input-group-text">Р</span>
                            </div>
                        </div> 
                        <span asp-validation-for="Organization.ShareСapital" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Organization.RuleType" class="control-label">
                            Форма управления
                        </label>
                        <select asp-for="Organization.RuleType" class="form-control">
                            <option value="0">Единоличная</option>
                            <option value="1">Коллективная</option>
                        </select>
                        <span asp-validation-for="Organization.RuleType" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Organization.RulesUrl" class="control-label">
                            Устав
                        </label>
                        <input asp-for="Organization.RulesUrl" class="form-control" />
                        <span asp-validation-for="Organization.RulesUrl" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Organization.DateFounded" class="control-label">
                            Дата основания
                        </label>
                        <input type="date" asp-for="Organization.DateFounded" class="form-control" />
                        <span asp-validation-for="Organization.DateFounded" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Добавить" class="btn btn-primary" />
                        <a class="btn btn-light" asp-page="Index">Назад</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
